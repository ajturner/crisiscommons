.sidebox {
  background: white;
  border: 1px solid #999;
  padding: 1em;
}

.margin {
  margin: 0 0 1em;
}
.sidebox.dark a {
  color: #333;
}
.sidebox.dark h2 {
  font-size: 1.7em
}
.dash_box {
  margin-right: 0;
}
.right_column {
  width: 18em;
}
.title_box table td {vertical-align: top}
